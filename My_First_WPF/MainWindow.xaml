<Window x:Class="My_First_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:My_First_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,-3,0,0" Cursor="Hand" SizeChanged="window_SizeChange" OpacityMask="#FFE6FF00" Background="#FF00A57C">
        <Button x:Name="the_button" Content="Click The Button" Height="75" Width="250" Click="the_button_Click" Background="Red" BorderBrush="#FF37FF00" Foreground="White" Margin="0,337,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" FontFamily="Bauhaus 93" FontSize="20" LostFocus="the_button_LostFocus" SizeChanged="the_button_SizeChanged"/>
        <Button x:Name="Another_Button" Content="Button" HorizontalAlignment="Left" Margin="98,60,0,0" VerticalAlignment="Top" Height="113" Width="252" MouseEnter="Another_Button_Mouse_Enter"/>
    </Grid>
</Window>
